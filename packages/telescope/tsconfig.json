{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./types",
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}